.container
  margin auto

.slider
  box-sizing border-box
  font-family "Arial Black"
  height 260px
  margin auto
  overflow-x hidden
  padding-top 230px
  position relative
  text-align center
  width 900px

  &__group
    font-size: 0
    left 10px
    list-style none
    margin 0
    padding 0
    position absolute
    top 20px
    white-space nowrap



  &__item
    display inline-block
    margin 0 10px
    position relative
    text-align left
    width 200px

    &:hover
      z-index 1

    figcaption
      display none
      font-size 10px
      padding-top 10px

  &__wrapper
    background #fff
    left 0
    margin 0
    padding 0
    position absolute
    right 0
    top 0

    &:hover
      box-shadow 0 0 10px rgba(0,0,0,0.5)
      left -10px
      padding 10px;
      right -10px
      top -10px

      figcaption
        display block

  &__img
    display block
    margin auto
    max-height 150px
    max-width 100%


  &__description
    display none
    white-space normal

  #group-1:checked
    ~ .slider__group
      left 10px
      transition: left 1s

  #group-2:checked
    ~ .slider__group
      left -650px
      transition: left 1s

  #group-3:checked
    ~ .slider__group
      left -1310px
      transition: left 1s

  #group-4:checked
    ~ .slider__group
      left -1970px
      transition: left 1s


.modal
  background rgba(gray .8)
  bottom 0
  color white
  display none
  font-family Arial
  font-size 13px
  left 0
  padding 10px
  position fixed
  right 0
  top 0
  z-index 1

  &__description
    margin 0
    max-width 50%


  &__img
    height 400px
    left 50%
    margin-left -200px
    margin-top -200px
    position absolute
    top 50%
    width 400px

    img
      max-width 100%
      max-height 100%


  &__close
    height 32px
    opacity 0.3
    position absolute
    right 32px
    top 32px
    width 32px
    &:hover
      opacity 1
    &:before
      transform rotate(45deg)
    &:after
      transform rotate(-45deg)

    &:before, &:after
      background-color #fff
      content ' '
      height 33px
      left 15px
      position absolute
      width 2px

  &__controller
    display: none

  &__controller
     display none
     &:checked + .modal
        display block





